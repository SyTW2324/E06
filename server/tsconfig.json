{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "rootDir": "./src",
    "declaration": true,
    "outDir": "./dist",
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "strictPropertyInitialization": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["./tests", "./node_modules", "./dist"]
}
